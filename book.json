{
    "title": "文档模板",
    "author": "陈亮",
    "description": "文档模板",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "links" : {
      "sidebar": {
          "云粒官网": "http://www.yunlizhihui.com/"
      }
    },
    "styles": {
        "website": "/styles/website.css",
        "pdf": "/styles/pdf.css"
    },
    "structure": {
        "readme": "README.md"
    },
    "plugins": [
        "-autocover",

        "favicon",
        "search-pro",
        "splitter",
        "page-toc-button",
        "back-to-top-button",
        "expandable-chapters",
        "pageview-count",
        "lightbox",
        "prism",
        "prism-themes",
        "-code",
        "code-optimize",
        "copy-code-button",
        "zealar",
        "panel",

        "hide-element",
        "-summary",
        "summary-pro",
        "-insert-logo",
        "insert-title",
        "insert-footer",
        "-local-pagefooter",
        "pagefooter-pro",
        "-embed-pdf",
        "pdf-pro",
        "my-toolbar",
        "theme-darkblue",
        "extra-html",
        "-book-tool",

        "-autotheme",
        "-customtheme",
        "-custom-landing",
        "-chapter-numbering",
        
        "-sharing",
        "-search",
        "-highlight",
        "-heading-anchors",
        "-lunr"      
    ],
    "variables": {
    },
    "pluginsConfig": {
        "summary-pro": {
            "firstpage": {
                "title": "概述"
            }
        },
        "insert-title": {
            "url": "",
            "title": "文档模板",
            "style": "background: none; max-height: 20px; min-height: 20px"
        },
        "insert-footer": {
            "url": "/images/logo.png",
            "title": "Powered by 应用中台部",
            "style": "background: none; max-height: 22px; min-height: 10px; vertical-align:middle; float:left !important;"
        },
        "pagefooter-pro": {
            "copyright":"&copy 云粒智慧科技有限公司 2020",
            "islocal" : true,
            "show_author": false,
            "modify_label": "文档更新时间: ",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        
        "code-optimize": {
            "copyButtons": true,
            "showLines": true
        },
        "lightbox": {
            "includeJQuery": false,
            "sameUuid": true,
            "options": {
                "resizeDuration": 200,
                "wrapAround": true
            }
        },
        "prism": {
            "css": [
              "prism-themes/themes/prism-duotone-dark.css"
            ]
        },
        "extra-html": {
            "header": {
                "files": [
                    "_header.html"
                ]
            },
            "footer": {
                "files": [
                ],
                "modules": {
                    "divider": false
                }
            }
        },
        "code": {
            "copyButtons": true
        },
        "my-toolbar": {
            "buttons":
            [
                {
                    "label": "PDF下载",
                    "text":"PDF下载",
                    "icon": "fa fa-file-pdf-o",
                    "position" : "right",
                    "url": "/assets/book-template-yunli.pdf",
                    "target": "_blank"
                },
                {
                    "label": "演示中心",
                    "text": "演示中心",
                    "position":"right",
                    "url": "http://show.yunlizhihui.com/",
                    "target": "_blank"
                },
                {
                    "label": "云粒官网",
                    "text": "云粒官网",
                    "position":"right",
                    "url": "http://www.yunlizhihui.com/",
                    "target": "_blank"
                },
                {
                    "label": " ",
                    "text": " ",
                    "icon": "fa fa-list",
                    "position":"right",
                    "url": "#",
                    "target": "_self",
                    "menu": [
                        {
                            "icon": "fa fa-th",
                            "text": "",
                            "action": ""
                        }
                    ]
                }
            ]
        },

        "page-toc-button": {
            "maxTocDepth": 2,
            "minTocSize": 2
        },

        "favicon": {
            "shortcut": "images/favicon.ico",
            "bookmark": "images/favicon.ico"
        },

        "insert-logo": {
            "url": "/images/logo_alpha2.png",
            "style": "background: none; max-height: 60px; min-height: 30px"
        },

        "hide-element": {
            "elements": [".gitbook-link"]
        },

        "theme-api": {
            "theme": "dark",
            "split": false,
            "languages": [
            ]
        },
        "autotheme": {
            "white": [9, 10, 11, 12, 13, 14, 15, 16],
            "sepia": [6, 7, 8, 17, 18, 19],
            "night": [20, 21, 22, 23, 0, 1, 2, 3, 4, 5]
        },
        "customtheme": {
            "css": ["/custom/css/app.css"],
            "js": ["/custom/js/app.js"]
        },
        "theme-grafana": {
            "styles": {
                "website": "/_assets/website/style.css",
                "pdf": "/styles/pdf.css"
            }
        }
    }
}
